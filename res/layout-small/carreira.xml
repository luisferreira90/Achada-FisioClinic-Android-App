<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical"
	android:scrollbarThumbVertical="@drawable/scrollbar"
	android:background="#FFFFFF">
        
    <LinearLayout
    	android:paddingLeft="35dp"
	    android:paddingRight="35dp"
	    android:paddingTop="10dp"
        android:layout_width="fill_parent"
       	android:layout_height="wrap_content"
        android:orientation="vertical">
	        
	   		<TextView
	   	    	android:id="@+id/txtTitle"
		   	    android:fontFamily="sans-serif"
		   	    android:layout_width="wrap_content"
		   	    android:layout_height="wrap_content"
		   	    android:text="@string/title_carreira_achada"
		   	    android:textStyle="bold"
		   	    android:textSize="35sp"/>
		   	
		   	<View
			    android:layout_width="fill_parent"
			    android:layout_height="2dp"
			    android:background="@android:color/darker_gray"/>

		   	<TextView
		   	    android:fontFamily="sans-serif"
		   	    android:layout_width="wrap_content"
		   	    android:layout_height="wrap_content"
		   	    android:paddingTop="40dp"
		   	    android:textStyle="bold"
		   	    android:textSize="25sp"
		   	    android:text="@string/title_dias_uteis" />
		   	
		   	<RelativeLayout
		   	    android:layout_width="wrap_content"
		   	    android:layout_height="wrap_content"
		   	    android:orientation="horizontal">
		   	    
		   	    <TextView
			   	    android:fontFamily="sans-serif"
			   	    android:layout_width="wrap_content"
			   	    android:layout_height="wrap_content"
			   	    android:paddingTop="20dp"
			   	    android:layout_alignParentLeft="true"
			   	    android:text="@string/title_subidas" 
			   	    android:textSize="20sp" />
		   	    
		   	    <TextView
			   	    android:fontFamily="sans-serif"
			   	    android:layout_width="wrap_content"
			   	    android:layout_height="wrap_content"
			   	    android:paddingTop="20dp"
			   	    android:layout_alignParentRight="true"
			   	    android:text="@string/title_descidas" 
			   	    android:textSize="20sp" />	   	    
		   	    
		   	</RelativeLayout>		
		   	
		   	<RelativeLayout
		   	    android:layout_width="wrap_content"
		   	    android:layout_height="wrap_content"
		   	    android:orientation="horizontal">
		   	    
		   	    <TextView
			   	    android:fontFamily="sans-serif"
			   	    android:layout_width="wrap_content"
			   	    android:layout_height="wrap_content"
			   	    android:paddingTop="20dp"
			   	    android:paddingLeft="10dp"
			   	    android:layout_alignParentLeft="true"
			   	    android:text="@string/subidas_uteis" 
			   	    android:textSize="20sp" />
		   	    
		   	    <TextView
			   	    android:fontFamily="sans-serif"
			   	    android:layout_width="wrap_content"
			   	    android:layout_height="wrap_content"
			   	    android:paddingTop="20dp"
			   	    android:paddingRight="10dp"
			   	    android:layout_alignParentRight="true"
			   	    android:text="@string/descidas_uteis" 
			   	    android:textSize="20sp" />	   	    
		   	    
		   	</RelativeLayout>
		   	
		   	<TextView
		   	    android:fontFamily="sans-serif"
		   	    android:layout_width="wrap_content"
		   	    android:layout_height="wrap_content"
		   	    android:paddingTop="40dp"
		   	    android:textStyle="bold"
		   	    android:textSize="25sp"
		   	    android:text="@string/title_sabados" />
		   	
		   	<RelativeLayout
		   	    android:layout_width="wrap_content"
		   	    android:layout_height="wrap_content"
		   	    android:orientation="horizontal">
		   	    
		   	    <TextView
			   	    android:fontFamily="sans-serif"
			   	    android:layout_width="wrap_content"
			   	    android:layout_height="wrap_content"
			   	    android:paddingTop="20dp"
			   	    android:layout_alignParentLeft="true"
			   	    android:text="@string/title_subidas" 
			   	    android:textSize="20sp" />
		   	    
		   	    <TextView
			   	    android:fontFamily="sans-serif"
			   	    android:layout_width="wrap_content"
			   	    android:layout_height="wrap_content"
			   	    android:paddingTop="20dp"
			   	    android:layout_alignParentRight="true"
			   	    android:text="@string/title_descidas" 
			   	    android:textSize="20sp" />	   	    
		   	    
		   	</RelativeLayout>		
		   	
		   	<RelativeLayout
		   	    android:layout_width="wrap_content"
		   	    android:layout_height="wrap_content"
		   	    android:orientation="horizontal">
		   	    
		   	    <TextView
			   	    android:fontFamily="sans-serif"
			   	    android:layout_width="wrap_content"
			   	    android:layout_height="wrap_content"
			   	    android:paddingTop="20dp"
			   	    android:paddingLeft="10dp"
			   	    android:layout_alignParentLeft="true"
			   	    android:text="@string/subidas_sabados" 
			   	    android:textSize="20sp" />
		   	    
		   	    <TextView
			   	    android:fontFamily="sans-serif"
			   	    android:layout_width="wrap_content"
			   	    android:layout_height="wrap_content"
			   	    android:paddingTop="20dp"
			   	    android:paddingRight="10dp"
			   	    android:layout_alignParentRight="true"
			   	    android:text="@string/descidas_sabados" 
			   	    android:textSize="20sp" />	   	    
		   	    
		   	</RelativeLayout>		   	
		  
	</LinearLayout>
	   
</ScrollView>
