<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical"
	android:scrollbarThumbVertical="@drawable/scrollbar"
	android:background="#FFFFFF">
	
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="15dp"
        android:paddingLeft="35dp"
    	android:paddingRight="35dp"
        android:orientation="vertical">
        
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingBottom="15dp"
            android:adjustViewBounds="true"
            android:background="@null"
            android:scaleType="fitEnd"
            android:src="@drawable/medinsular" />
        
        <TextView
	   	    android:fontFamily="sans-serif"
	   	    android:layout_width="wrap_content"
	   	    android:layout_height="wrap_content"
	   	    android:textStyle="bold"
	   	    android:textSize="35sp"
	   	    android:text="@string/title_desconto"/>
		   	
   		<View
		    android:layout_width="fill_parent"
		    android:layout_height="2dp"
		    android:background="@android:color/darker_gray"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="40dp"
            android:paddingBottom="25dp"
            android:orientation="horizontal"
            android:weightSum="1">
            
		    <TextView 
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:layout_weight="0.75"
		        android:layout_gravity="center|left"
		        android:gravity="center|left"
		        android:textSize="16sp"
		        android:text="@string/medinsular1"/>
		    
		    <TextView 
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:layout_weight="0.25"
	    	    android:layout_gravity="center|right"
	    	    android:gravity="center|right"
	    	    android:textSize="40sp"
		        android:text="@string/dezporcento" />
		    
    	</LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="25dp"
            android:paddingBottom="25dp"
            android:orientation="horizontal"
            android:weightSum="1">
            
		    <TextView 
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:layout_weight="0.75"
		        android:layout_gravity="center|left"
		        android:gravity="center|left"
		        android:textSize="16sp"
		        android:text="@string/medinsular2"/>
		    
		    <TextView 
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:layout_weight="0.25"
	    	    android:layout_gravity="center|right"
	    	    android:gravity="center|right"
	    	    android:textSize="40sp"
		        android:text="@string/cincoporcento" />
		    
    	</LinearLayout>
    	
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="25dp"
            android:paddingBottom="25dp"
            android:orientation="horizontal"
            android:weightSum="1">
            
		    <TextView 
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:layout_weight="0.75"
		        android:layout_gravity="center|left"
		        android:gravity="center|left"
		        android:textSize="16sp"
		        android:text="@string/medinsular3"/>
		    
		    <TextView 
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:layout_weight="0.25"
	    	    android:layout_gravity="center|right"
	    	    android:gravity="center|right"
	    	    android:textSize="40sp"
		        android:text="@string/doisporcento" />
		    
    	</LinearLayout>
    	
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="50dp"
            android:text="@string/medinsularexcep"/>        
	    
		<TextView
	   	    android:fontFamily="sans-serif"
	   	    android:layout_width="wrap_content"
	   	    android:layout_height="wrap_content"
	   	    android:paddingTop="40dp"
	   	    android:textStyle="bold"
	   	    android:textSize="35sp"
	   	    android:text="@string/title_contactos"/>
		   	
   		<View
		    android:layout_width="fill_parent"
		    android:layout_height="2dp"
		    android:background="@android:color/darker_gray"/>
   		
   		<TextView
	    android:fontFamily="sans-serif"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:paddingTop="20dp"
	    android:textStyle="bold" 
	    android:textSize="25sp"
	    android:text="@string/title_endereco" />
   		
	<LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
    	android:paddingBottom="20dp"
        android:orientation="horizontal">
    
	    <TextView
	        android:id="@+id/txtLojas"
	   	    android:fontFamily="sans-serif"
	   	    android:layout_width="0dp"
	   	    android:layout_height="wrap_content"
			android:layout_weight="0.75"
	   	    android:text="@string/medinsularmorada" 
	   	    android:textSize="20sp" />
	    
	     <ImageButton
	   	    android:id="@+id/btnMorada"
	   	    android:layout_width="0dp"
	   	    android:layout_height="wrap_content"
	   	    android:layout_weight="0.25"
	   	    android:background="@null"
	   	    android:src="@drawable/maps"
	   	    android:contentDescription="@string/acess_mapas"
	   	    android:onClick="onClickShowMap" />
	     
     </LinearLayout>
	    
    <TextView
	    android:fontFamily="sans-serif"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textStyle="bold" 
	    android:textSize="25sp"
	    android:text="@string/title_telefone" />
    
    <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:paddingBottom="20dp"
            android:weightSum="1">
    
	    <TextView
	   	    android:fontFamily="sans-serif"
	   	    android:layout_width="0dp"
	   	    android:layout_height="wrap_content"
	   	    android:layout_weight="0.75"
	   	    android:text="@string/medinsulartelefone" 
	   	    android:textSize="20sp" />
	    
	     <ImageButton
	   	    android:layout_width="0dp"
	   	    android:layout_height="wrap_content"
	   	    android:background="@null"
	   	    android:layout_weight="0.25"
	   	    android:src="@drawable/telefone"
	   	    android:contentDescription="@string/acess_telefonar"
	   	    android:onClick="onClickTelefone" />
    
    </LinearLayout>
	    
    <TextView
	    android:fontFamily="sans-serif"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:paddingTop="20dp"
	    android:textStyle="bold" 
	    android:textSize="25sp"
	    android:text="@string/title_email" />
    
    	<LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:paddingBottom="20dp"
            android:weightSum="1">
    
	    <TextView
	        android:id="@+id/txtEmail"
	   	    android:fontFamily="sans-serif"
	   	    android:layout_width="0dp"
	   	    android:layout_weight="0.75"
	   	    android:layout_height="wrap_content"
	   	    android:text="@string/medinsularemail" 
	   	    android:textSize="20sp" />
	    
	     <ImageButton
	   	    android:id="@+id/btnEmail"
	   	    android:layout_width="0dp"
	   	    android:layout_weight="0.25"
	   	    android:layout_height="wrap_content"
	   	    android:background="@null"
	   	    android:src="@drawable/email"
	   	    android:contentDescription="@string/acess_email"
	   	    android:onClick="onClickEmail" />
	     
	     </LinearLayout>   
	    
 	</LinearLayout>
 	
</ScrollView>
