<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical"
	android:scrollbarThumbVertical="@drawable/scrollbar"
	android:background="#FFFFFF">
        
    <LinearLayout
    	android:paddingLeft="35dp"
	    android:paddingRight="35dp"
	    android:paddingTop="10dp"
        android:layout_width="fill_parent"
       	android:layout_height="wrap_content"
        android:orientation="vertical">
	        
	   		<TextView
	   	    	android:id="@+id/txtTitle"
		   	    android:fontFamily="sans-serif"
		   	    android:layout_width="wrap_content"
		   	    android:layout_height="wrap_content"
		   	    android:textStyle="bold"
		   	    android:textSize="35sp"/>
		   	
		   	<View
			    android:layout_width="fill_parent"
			    android:layout_height="2dp"
			    android:background="@android:color/darker_gray"/>

		   	<TextView
		   	    android:fontFamily="sans-serif"
		   	    android:layout_width="wrap_content"
		   	    android:layout_height="wrap_content"
		   	    android:paddingTop="20dp"
		   	    android:text="@string/osteopatia" 
		   	    android:textSize="20sp" />
		   	
		   	<ImageView 
		   	    android:layout_width="313dp"
		   	    android:layout_height="250dp"
		   	    android:paddingTop="20dp"
		   	    android:scaleType="fitXY"
		   	    android:layout_gravity="center"
		   	    android:src="@drawable/osteopatia_1"/>
		   	
		   	<TextView
		   	    android:fontFamily="sans-serif"
		   	    android:layout_width="wrap_content"
		   	    android:layout_height="wrap_content"
		   	    android:paddingTop="40dp"
		   	    android:textStyle="bold" 
		   	    android:textSize="25sp"
		   	    android:text="@string/title_como_actua" />
		        
		   	<TextView
		   	    android:fontFamily="sans-serif"
		   	    android:layout_width="wrap_content"
		   	    android:layout_height="wrap_content"
		   	    android:paddingTop="20dp"
		   	    android:text="@string/como_actua" 
		   	    android:textSize="20sp" />
		   	
		   	<ImageView 
		   	    android:layout_width="313dp"
		   	    android:layout_height="250dp"
		   	    android:paddingTop="20dp"
		   	    android:scaleType="fitXY"
		   	    android:layout_gravity="center"
		   	    android:src="@drawable/osteopatia_2"/>
		   	
		   	<TextView
		   	    android:fontFamily="sans-serif"
		   	    android:layout_width="wrap_content"
		   	    android:layout_height="wrap_content"
		   	    android:paddingTop="40dp"
		   	    android:textStyle="bold" 
		   	    android:textSize="25sp"
		   	    android:text="@string/title_campo_accao" />
		        
		   	<TextView
		   	    android:fontFamily="sans-serif"
		   	    android:layout_width="wrap_content"
		   	    android:layout_height="wrap_content"
		   	    android:paddingTop="20dp"
		   	    android:text="@string/campo_accao" 
		   	    android:textSize="20sp" />
		   	
		   	<TextView
		   	    android:fontFamily="sans-serif"
		   	    android:layout_width="wrap_content"
		   	    android:layout_height="wrap_content"
		   	    android:paddingTop="40dp"
		   	    android:textStyle="bold" 
		   	    android:textSize="25sp"
		   	    android:text="@string/title_tratamento" />
		        
		   	<TextView
		   	    android:fontFamily="sans-serif"
		   	    android:layout_width="wrap_content"
		   	    android:layout_height="wrap_content"
		   	    android:paddingTop="20dp"
		   	    android:text="@string/tratamento" 
		   	    android:textSize="20sp" />
		   	
		   	<TextView
		   	    android:fontFamily="sans-serif"
		   	    android:layout_width="wrap_content"
		   	    android:layout_height="wrap_content"
		   	    android:paddingTop="40dp"
		   	    android:textStyle="bold" 
		   	    android:textSize="25sp"
		   	    android:text="@string/title_metodologia" />
		        
		   	<TextView
		   	    android:fontFamily="sans-serif"
		   	    android:layout_width="wrap_content"
		   	    android:layout_height="wrap_content"
		   	    android:paddingTop="20dp"
		   	    android:text="@string/metodologia" 
		   	    android:textSize="20sp" />
		   	
		   	<RelativeLayout
		   	    android:orientation="horizontal"
		   	    android:layout_width="wrap_content"
		   	    android:layout_height="wrap_content"
		   	    android:paddingBottom="15dp">
		   	    
			   	<ImageView 
			   	    android:layout_width="250dp"
			   	    android:layout_height="200dp"
			   	    android:paddingTop="20dp"
			   	    android:scaleType="fitXY"
			   	    android:layout_alignParentLeft="true"
			   	    android:src="@drawable/osteopatia_3"/>
			   	
			   	<ImageView 
			   	    android:layout_width="250dp"
			   	    android:layout_height="200dp"
			   	    android:paddingTop="20dp"
			   	    android:scaleType="fitXY"
			   	    android:layout_alignParentRight="true"
			   	    android:src="@drawable/osteopatia_4"/>
		   	
		   	</RelativeLayout>

	</LinearLayout>
	   
</ScrollView>
